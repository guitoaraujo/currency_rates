<div class="row justify-content-center">
  <div class="col-4 text-center">
    <h3>Currency Rates</h3>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-4 text-left">
    <%= form_tag currencies_index_path, method: :get do %>
      <div class="form-group">
        <%= text_field_tag :date, '', id: 'datepicker', :class => 'form-control', placeholder: 'Choose a date' %>
      </div>
      <div class="form-group">
        <%= submit_tag "Search", class:"btn btn-sm btn-primary", name: "submit" %>
      </div>
    <% end %>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-10 text-center">
    <div id="container" style="width:100%; height:400px;"></div>
  </div>
</div>

<script>
  var myChart = Highcharts.chart('container', {
    title: {
      text: 'Currency Rates'
    },
    xAxis: {
      categories: ['EUR', 'BRL', 'ARS']
    },
    yAxis: {
      title: {
          text: 'USD Rate'
      }
    },
    series: [{
      name: '<%= @date %>',
      data: [<%= @rates['USDEUR'] %>, <%= @rates['USDBRL'] %>, <%= @rates['USDARS'] %>]
    }]
  });
</script>